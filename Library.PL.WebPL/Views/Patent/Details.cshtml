@model Library.PL.WebPL.Models.Patent.DisplayPatentVM

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Patent</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            <label asp-for="Name"></label>
        </dt>
        <dd class = "col-sm-10">
            @Model.Name
        </dd>
        <dt class = "col-sm-2">
            <label asp-for="Authors"></label>
        </dt>
        <dd class = "col-sm-10">
            @string.Join(", ", Model.Authors.Select(item => item.ToString()))
        </dd>
        <dt class = "col-sm-2">
            <label asp-for="Country"></label>
        </dt>
        <dd class = "col-sm-10">
            @Model.Country
        </dd>
        <dt class = "col-sm-2">
            <label asp-for="Pages"></label>
        </dt>
        <dd class = "col-sm-10">
            @Model.Pages
        </dd>
        <dt class = "col-sm-2">
            <label asp-for="RegistrationNumber"></label>
        </dt>
        <dd class = "col-sm-10">
            @Model.RegistrationNumber
        </dd>
        <dt class = "col-sm-2">
            <label asp-for="PublicationDate"></label>
        </dt>
        <dd class = "col-sm-10">
            @Model.PublicationDate.ToShortDateString()
        </dd>
        <dt class = "col-sm-2">
            <label asp-for="ApplicationDate"></label>
        </dt>
        <dd class = "col-sm-10">
            @Model.ApplicationDate.ToShortDateString()
        </dd>
        <dt class = "col-sm-2">
            <label asp-for="Description"></label>
        </dt>
        <dd class = "col-sm-10">
            @Model.Description
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-success" asp-action="Edit" asp-route-id="@Model.ID">Edit</a>
    <a class="btn btn-primary" asp-action="Index">Back to List</a>
</div>
