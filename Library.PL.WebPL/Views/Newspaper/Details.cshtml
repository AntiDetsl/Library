@model Library.PL.WebPL.Models.Newspaper.DisplayNewspaperVM

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Newspaper</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            <label asp-for="Name"></label>
        </dt>
        <dd class = "col-sm-10">
            @Model.Name
        </dd>
        <dt class = "col-sm-2">
            <label asp-for="City"></label>
        </dt>
        <dd class = "col-sm-10">
            @Model.City
        </dd>
        <dt class = "col-sm-2">
            <label asp-for="Publisher"></label>
        </dt>
        <dd class = "col-sm-10">
            @Model.Publisher
        </dd>
        <dt class = "col-sm-2">
            <label asp-for="Pages"></label>
        </dt>
        <dd class = "col-sm-10">
            @Model.Pages
        </dd>
        <dt class = "col-sm-2">
            <label asp-for="PublicationYear"></label>
        </dt>
        <dd class = "col-sm-10">
            @Model.PublicationYear
        </dd>
        <dt class = "col-sm-2">
            <label asp-for="ISSN"></label>
        </dt>
        <dd class = "col-sm-10">
            @Model.ISSN
        </dd>
        <dt class = "col-sm-2">
            <label asp-for="IssueNumber"></label>
        </dt>
        <dd class = "col-sm-10">
            @Model.IssueNumber
        </dd>
        <dt class = "col-sm-2">
            <label asp-for="IssueDate"></label>
        </dt>
        <dd class = "col-sm-10">
            @Model.IssueDate.ToShortDateString()
        </dd>
        <dt class = "col-sm-2">
            <label asp-for="Description"></label>
        </dt>
        <dd class = "col-sm-10">
            @Model.Description
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-success" asp-action="Edit" asp-route-id="@Model.ID">Edit</a>
    <a class="btn btn-primary" asp-action="Index">Back to List</a>
</div>
