@model Library.PL.WebPL.Models.Book.DisplayBookVM

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Book</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <label asp-for="Name"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
        <dt class="col-sm-2">
            <label asp-for="Authors"></label>
        </dt>
        <dd class="col-sm-10">
            @string.Join(", ", Model.Authors.Select(i => i.ToString()).ToArray())
        </dd>
        <dt class="col-sm-2">
            <label asp-for="PublicationYear"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.PublicationYear
        </dd>
        <dt class="col-sm-2">
            <label asp-for="Publisher"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.Publisher
        </dd>
        <dt class="col-sm-2">
            <label asp-for="Pages"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.Pages
        </dd>
        <dt class="col-sm-2">
            <label asp-for="City"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.City
        </dd>
        <dt class="col-sm-2">
            <label asp-for="ISBN"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.ISBN
        </dd>
        <dt class="col-sm-2">
            <label asp-for="Description"></label>
        </dt>
        <dd class="col-sm-10">
            @Model.Description
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-success" asp-action="Edit" asp-route-id="@Model.ID">Edit</a>
    <a class="btn btn-primary" asp-action="Index">Back to List</a>
</div>
